
x = 0
def setup():
    size(500,500)

def draw():
    global x
    x += 1
    textSize(40)
    if x <= 9:
        text("{}{}".format('00000', x), 100, 100)
    elif x <= 99:
        text("{}{}".format('0000', x), 100, 100)
    elif x <= 999:
        text("{}{}".format('000', x), 100, 100)
    elif x <= 9999:
        text("{}{}".format('00', x), 100, 100)
    elif x <= 99999:
        text("{}{}".format('0', x), 100, 100)
    elif x <= 999999:
        text("{}".format(x), 100, 100)
 




